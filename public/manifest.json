{
  "manifest_version": 2,
  "name": "Chrome Tab Customizer",
  "description": "Customize the behavior of tabs in Chrome.",
  "version": "1.0",
  "default_locale": "en",
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },
  "offline_enabled": true,
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}